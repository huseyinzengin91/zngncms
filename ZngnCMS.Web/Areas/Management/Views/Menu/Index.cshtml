@model ZngnCMS.Model.Menu.MenuIndexModel
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Menüler</h1>
    </div>

</div>

<script type="text/javascript">
    function deleteMenu() {
        var currentDataID = $("#currentDataID").val();
        window.location = "/Management/Menu/Delete/?menuID=" + currentDataID;
    }

    function setCurrentDataID(currentDataID) {
        $("#currentDataID").val(currentDataID);
    }

    function refresh() {
        var languageID = $("#LanguageID").val();
        window.location = "/Management/Menu/Index/?languageID=" + languageID;
    }

</script>

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Menüler
            </div>

            <div class="row">
                @Html.Alert(Model.Alerts)
            </div>


            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">

                        <div class="form-group">
                            <label>Dil</label>
                            @Html.DropDownList("LanguageID", Model.LanguageList, new { @class = "form-control", @onchange = "refresh();" })
                        </div>

                        @Html.TreeMenu(Model.MenuList)
                        
                        <input type="hidden" id="currentDataID" />
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                                        <h4 class="modal-title" id="myModalLabel">Menü silme işlemi</h4>
                                    </div>
                                    <div class="modal-body">
                                        Seçilen menü ve alt menülerini silmek istediğinize emin misiniz?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
                                        <button type="button" class="btn btn-primary" onclick="deleteMenu()">Evet</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>