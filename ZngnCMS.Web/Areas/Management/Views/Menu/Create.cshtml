@model ZngnCMS.Model.Menu.MenuCreateModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Menü Ekle</h1>
    </div>

</div>

<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Menü Ekle
            </div>

            <div class="row">
                @Html.Alert(Model.Alerts)
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">

                        <form method="post">
                            <div class="form-group">
                                <label>Dil</label>
                                @Html.DropDownList("LanguageID", Model.LanguageList, new { @class = "form-control", @onchange = "refresh();" })
                            </div>

                            <div class="form-group">
                                <label>Başlık</label>
                                @Html.TextBoxFor(z => z.Name, new { @class = "form-control" })
                                <p class="help-block">Menü adı</p>
                            </div>

                            <div class="form-group">
                                <label>URL</label>
                                @Html.TextBoxFor(z => z.URL, new { @class = "form-control" })
                                <p class="help-block">URL</p>
                            </div>

                            <div class="form-group">
                                <label>Sıra</label>
                                @Html.TextBoxFor(z => z.Sort, new { @class = "form-control", @type = "number", @Value = "1" })
                                <p class="help-block">Menü sırası</p>
                            </div>

                            <div class="form-group">
                                <label>Menü bağı</label>
                                @Html.TextBoxFor(z => z.TopMenu, new { @class = "form-control" })
                                <p class="help-block">Menü bağı seçeneğiyle alt menü eklenebilir</p>
                            </div>

                            <button type="submit" class="btn btn-default">Kaydet</button>

                        </form>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>