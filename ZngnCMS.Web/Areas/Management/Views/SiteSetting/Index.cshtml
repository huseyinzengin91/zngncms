@model ZngnCMS.Model.SiteSetting.SiteSettingIndexModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Site Ayarları</h1>
    </div>

</div>

<script type="text/javascript">
    function refresh() {
        var languageID = $("#LanguageID").val();
        window.location = "/Management/SiteSetting/Index?languageID="+languageID;
    }
</script>


<div class="row">
    <div class="col-lg-12">
        
        <div class="panel panel-default">
            <div class="panel-heading">
                Site Ayarları
            </div>

            <div class="row">
                @Html.Alert(Model.Alerts)
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        
                        <form method="post">
                            @Html.HiddenFor(z => z.SiteSettingID)
                            <div class="form-group">
                                <label>Dil</label>
                                @Html.DropDownList("LanguageID", Model.LanguageList, new { @class = "form-control", @onchange = "refresh();" })
                            </div>

                            <div class="form-group">
                                <label>Başlık</label>
                                @Html.TextBoxFor(z => z.Title, new { @class = "form-control" })
                                <p class="help-block">Site başlığı</p>
                            </div>

                            <div class="form-group">
                                <label>Açıklama</label>
                                @Html.TextBoxFor(z => z.Description, new { @class = "form-control" })
                                <p class="help-block">Seo açıklaması</p>
                            </div>

                            <div class="form-group">
                                <label>Anahtar Kelimeler</label>
                                @Html.TextBoxFor(z => z.Keyword, new { @class = "form-control" })
                                <p class="help-block">Seo anahtar kelimeleri</p>
                            </div>

                            <div class="form-group">
                                <label>Alt Metin</label>
                                @Html.TextAreaFor(z => z.FooterText, new { @class="form-control" ,@rows="3" })
                                <p class="help-block">Site altındaki imza metini</p>
                            </div>

                            <div class="form-group">
                                <label>E-Posta</label>
                                @Html.TextBoxFor(z => z.Email, new { @class = "form-control" })
                                <p class="help-block">E-posta gönderecek olan adres</p>
                            </div>

                            <div class="form-group">
                                <label>E-Posta Şifresi</label>
                                @Html.TextBoxFor(z => z.EmailPassword, new { @class = "form-control" })
                                <p class="help-block">E-Posta gönderecek olan adresin şifresi</p>
                            </div>

                            <div class="form-group">
                                <label>E-Posta Port</label>
                                @Html.TextBoxFor(z => z.EmailPort, new { @class = "form-control" })
                                <p class="help-block">E-Posta gönderecek olan adresin port numarası</p>
                            </div>

                            <button type="submit" class="btn btn-default">Kaydet</button>

                        </form>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>