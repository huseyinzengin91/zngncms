@model ZngnCMS.Model.Language.LanguageCreateModel

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Dil Ekle</h1>
    </div>

</div>

<div class="row">
    @Html.Alert(Model.Alerts)
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Dil Ekle
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">

                        <form method="post">

                            <div class="form-group">
                                <label>Ad</label>
                                @Html.TextBoxFor(z => z.Name, new { @class = "form-control" })
                                <p class="help-block">Dil adı.</p>
                            </div>

                            <div class="form-group">
                                <label>Kod</label>
                                @Html.TextBoxFor(z => z.Code, new { @class = "form-control" })
                                <p class="help-block">Dil kodu (tr, eng, deu).</p>
                            </div>

                            <div class="form-group">
                                <label>Kelimeler</label>
                                @Html.TextAreaFor(z => z.Keyword, new { @class = "form-control", @rows = "3" })
                                <p class="help-block">Dile özel kelimeler.</p>
                            </div>

                            <div class="form-group">
                                <div class="checkbox">
                                    <label>
                                        <b>Yayın</b> @Html.CheckBoxFor(z => z.Publish)
                                    </label>
                                </div>

                                <p class="help-block">Yayın durumu.</p>
                            </div>

                            <button type="submit" class="btn btn-default">Kaydet</button>

                        </form>

                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
