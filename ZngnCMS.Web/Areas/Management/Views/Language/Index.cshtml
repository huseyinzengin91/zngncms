@model ZngnCMS.Model.Language.LanguageIndexModel
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Diller</h1>
    </div>

</div>



<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                Diller
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Ad</th>
                                    <th>Kod</th>
                                    <th>Yayın</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (ZngnCMS.Model.Language.LanguageItemModel item in Model.LanguageList)
                                {
                                    <tr>
                                        <td># @item.ID</td>
                                        <td>@item.Name</td>
                                        <td>@item.Code</td>
                                        <td>@item.Publish</td>
                                        <td>
                                            <button type="button" class="btn btn-primary btn-xs">Düzenle</button>
                                            <button type="button" class="btn btn-danger btn-xs">Sil</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>