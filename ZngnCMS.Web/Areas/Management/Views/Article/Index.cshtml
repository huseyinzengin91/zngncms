@model ZngnCMS.Model.Article.ArticleIndexModel
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">İçerikler</h1>
    </div>

</div>


<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default">
            <div class="panel-heading">
                İçerikler
            </div>

            <div class="row">
                @Html.Alert(Model.Alerts)
            </div>

            <div class="panel-body">
                <div class="row">
                    <div class="col-md-6">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Ad</th>
                                    <th>İşlem</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (ZngnCMS.Model.Article.ArticleItemModel item in Model.ArticleList)
                                {
                                    <tr>
                                        <td># @item.ID</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <a href="/Management/Article/Edit?articleID=@item.ID" class="btn btn-primary btn-xs">Düzenle</a>
                                            <a href="/Management/Article/Delete?articleID=@item.ID" class="btn btn-danger btn-xs">Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>