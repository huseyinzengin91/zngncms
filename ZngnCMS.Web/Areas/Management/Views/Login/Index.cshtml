@model ZngnCMS.Model.Authorization.LoginModel
@{
    
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>ZNGN CMS</title>

    <!-- Core CSS - Include with every page -->
    <link href="/Areas/Management/Assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/Areas/Management/Assets/font-awesome/css/font-awesome.css" rel="stylesheet">

    <!-- SB Admin CSS - Include with every page -->
    <link href="/Areas/Management/Assets/css/sb-admin.css" rel="stylesheet">

</head>

<body>

    
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">

                    @Html.Alert(Model.Alerts)

                    <div class="panel-heading">
                        <h3 class="panel-title">Yönetim Paneli</h3>
                    </div>
                    <div class="panel-body">
                        <form action="" method="post">
                            <fieldset>
                                <div class="form-group">
                                    @Html.TextBoxFor(z => z.Email, new { @class="form-control", @placeholder = "E-mail", @autofocus = true })
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(z => z.Password, new { @class = "form-control", @placeholder = "Şifre" })
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Beni Hatırla
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-success btn-block">Giriş</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Core Scripts - Include with every page -->
    <script src="/Areas/Management/Assets/js/jquery-1.10.2.js"></script>
    <script src="/Areas/Management/Assets/js/bootstrap.min.js"></script>
    <script src="/Areas/Management/Assets/js/plugins/metisMenu/jquery.metisMenu.js"></script>

    <!-- SB Admin Scripts - Include with every page -->
    <script src="/Areas/Management/Assets/js/sb-admin.js"></script>

</body>

</html>
